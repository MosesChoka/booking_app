<h1 class="mt-2 py-1 text-blue-600 text-2xl font-semibold">Houses</h1>
<p>Manage Rooms</p>
<table class="w-full sm:w-1/2  table-auto border-collapse border border-gray-200 mt-4">
  <thead>
    <tr class="bg-gray-100">
      <th class="border border-gray-200 px-4 py-2">
        Our Houses
      </th>
    </tr>
  </thead>
  <tbody>
    <% @rooms.each do |room|%>
      <tr>
        <td class="text-center border border-gray-200 px-4 py-2"><a href="/rooms/<%= room.id%>"><%= room.title %></a></td>
        <td class="text-center border border-gray-200 px-4 py-2"><a href="/rooms/<%= room.id%>"><%= link_to 'edit', edit_room_path(@room) %></a></td>
      </tr>
    <%end%>
  </tbody>
</table>
<% if current_user.has_role? :admin %>
  <div class="w-32 border border-black-200 bg-blue-700 text-center my-10 text-white hover:bg-green-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-4 py-2 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">
    <%= link_to "Create a room", new_room_path %>
  </div>
<% end %>
<div class="w-32 border border-black-200 bg-blue-700 text-center my-10 text-white hover:bg-green-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-4 py-2 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">
  <%= link_to "Home", root_path%>
</div>
