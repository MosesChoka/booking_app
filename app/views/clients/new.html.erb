<section class="bg-slate-100 h-screen">
  <div class=" w-full max-w-xs mt-2 mx-auto">
    <div class="py-40 sm:py-44 md:py-48">
      <h1 class="text-center font-semibold text-2xl py-4">Make a Reservation</h1>
      <%= form_with model: @client do |form| %>
        <div class="mb-4">
          <%= form.label :name %>
          <%= form.text_field :name, class:"shadow appearance-none border border-red-500 rounded w-full py-2 px-3 text-gray-700 mb-3 leading-tight focus:outline-none focus:shadow-outline" %>
        </div>
        <div class="mb-4">
          <%= form.label :arrival %>
          <%= form.date_field :arrival, class:"shadow appearance-none border border-red-500 rounded w-full py-2 px-3 text-gray-700 mb-3 leading-tight focus:outline-none focus:shadow-outline" %>
        </div>
        <div class="mb-4">
          <%= form.label :departure %>
          <%= form.date_field :departure, class:"shadow appearance-none border border-red-500 rounded w-full py-2 px-3 text-gray-700 mb-3 leading-tight focus:outline-none focus:shadow-outline" %>
        </div>
        <div class="flex items-center justify-between">
          <%= form.submit 'Book Now', class:"bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline"%>
        </div>
      <% end %>
    </div>
  </div>
</section>
