<div class="w-full max-w-xs mt-20 mx-auto">
  <%= form_with model: @room do |form| %>
    <div class="mb-4">
      <%= form.label :images %>
      <%= form.file_field :images, multiple: true %>
    </div>
    <div class="mb-4">
      <%= form.label :title %>
      <%= form.text_field :title, class:"shadow appearance-none border border-red-500 rounded w-full py-2 px-3 text-gray-700 mb-3 leading-tight focus:outline-none focus:shadow-outline" %>
    </div>
    <div class="mb-4">
      <%= form.label :description %>
      <%= form.rich_text_area :description %>
    </div>
    <div class="flex items-center justify-between">
      <%= form.submit 'Create Room', class:"bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline"%>
    </div>
  <% end %>
</div>